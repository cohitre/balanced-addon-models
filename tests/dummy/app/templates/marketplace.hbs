<h2>Marketplace: {{model.name}}</h2>

<h3>Transactions: {{transactions.length}}/{{transactions.totalCount}}</h3>
<a {{action "reload" transactions}} href="#">reload</a>
|
{{#if transactions.hasNextPage}}
  <a {{action "loadNext" transactions}} href="#">load next</a>
{{/if}}

<table>
  <thead>
    <tr>
      <td>Date</td>
      <td>Amount</td>
    </tr>
  </thead>
  <tbody>
    {{#each transaction in transactions}}
      <tr>
        <td>{{transaction.createdAt}}</td>
        <td>{{transaction.amountDollars}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<h3>Customers: {{customers.length}}/{{customers.totalCount}}</h3>
<a {{action "reload" customers}} href="#">reload</a>
|
{{#if customers.hasNextPage}}
  <a {{action "loadNext" customers}} href="#">load next</a>
{{/if}}

<table>
  <thead>
    <tr>
      <td>Date</td>
      <td>Customer</td>
      <td>Funding Instruments count</td>
    </tr>
  </thead>
  <tbody>
    {{#each customer in customers}}
      <tr>
        <td>{{customer.createdAt}}</td>
        <td>{{customer.name}}</td>
        <td>{{customer.fundingInstruments.length}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
